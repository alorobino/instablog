<p></p>
<hr />
<% @posts.each do |post| %>
  <%= link_to(image_tag(post.pic.variant(auto_orient: true), class: "my-pic"), post) %>
  <p class="caption"><%= post.caption %></p>
  <p class="date">author: <%= link_to post.user.email, post.user %></p>
  <p class="date">created: <%= post.created_at.strftime("%B %d %Y") %></p>
  <hr />
<% end %>
