<div class="container">
  <div class="row justify-content-center">
      <div class="col-md-auto">
        <h1 class="title">home</h1>
        <% @posts.each do |post| %>
          <div class="card" style="width:18rem;">
            <%= link_to(image_tag(post.pic.variant(auto_orient: true), class: "my-pic"), post) %>
            <div class="card-body">
              <p class="card-text"><%= post.caption %></p>
              <p class="card-text">author: <%= link_to post.user.email, post.user %></p>
              <p class="card-text">created: <%= post.created_at.strftime("%B %d %Y") %></p>
            </div>
          </div>
        <% end %>
      </div>
  </div>
</div>
